{
  "name": "nucleon",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/main",
  "license": "MIT",
  "exports": {
    ".": "./dist/main.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "tsc && concurrently -r \"tsc --watch\" \"nodemon -q --experimental-specifier-resolution=node --no-warnings dist/main\"",
    "start:prod": "node --experimental-specifier-resolution=node dist/main.js"
  },
  "devDependencies": {
    "concurrently": "^7.2.2",
    "nodemon": "^2.0.19",
    "prisma": "^4.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@prisma/client": "^4.0.0"
  },
  "prisma": {
    "schema": "database/schema.prisma"
  }
}
