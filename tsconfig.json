{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "declaration": false,
    "declarationMap": false,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "lib": [
      "es2021"
    ]
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "database",
    "node_modules"
  ]
}
